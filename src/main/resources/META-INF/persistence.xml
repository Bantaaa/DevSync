<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
    <persistence-unit name="myPU" transaction-type="JTA">
        <!-- Comment out or remove the jta-data-source if you're specifying connection details manually -->
        <!-- <jta-data-source>java:/jboss/datasources/PostgresDS</jta-data-source> -->
        <properties>
            <!-- Database connection properties -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:8080//localhost"/>
            <property name="jakarta.persistence.jdbc.user" value="devsync"/>
            <property name="jakarta.persistence.jdbc.password" value="testpassword"/>

            <!-- Schema generation -->
            <property name="jakarta.persistence.schema-generation.database.action" value="create"/>

            <!-- Hibernate properties -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
        </properties>
    </persistence-unit>
</persistence>